<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- ========== Properties ========== -->
    <property name="LOG_PATH" value="logs"/>
    <property name="APP_NAME" value="library-web"/>

    <!-- ========== Console Appender ========== -->
    <appender name="CONSOLE"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS}
                [%thread]
                %-5level
                %logger{36}
                correlationId=%X{correlationId}
                - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ========== FILE Appender (Correlation Logs) ========== -->
    <appender name="REQUEST_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-requests.log</file>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_PATH}/${APP_NAME}-requests.%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <maxHistory>14</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS}
                %-5level
                method=%X{method}
                path=%X{path}
                correlationId=%X{correlationId}
                - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ========== Root Logger ========== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="REQUEST_FILE"/>
    </root>

    <!-- ========== Execution Time Logs ========== -->
    <logger name="EXECUTION_TIME" level="INFO" additivity="false">
        <appender-ref ref="REQUEST_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- ========== Audit Logs ========== -->
    <logger name="AUDIT_LOG" level="INFO" additivity="false">
        <appender-ref ref="REQUEST_FILE"/>
    </logger>


</configuration>
